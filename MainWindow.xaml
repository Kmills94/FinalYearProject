<Window x:Class="ProjectOffline.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="525"
        ResizeMode="NoResize"
        KeyDown="KeyPressed" Icon="Toma4025-Rumax-Filetype-dat.ico">
    
    <Grid>
        <TextBox x:Name="usernameINP" HorizontalAlignment="Left" Height="20" Margin="36.5,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" />
        <PasswordBox x:Name="passwordINP" HorizontalAlignment="Left" Margin="36.5,94.5,0,0" VerticalAlignment="Top" Height="20" Width="201" />
        <Button x:Name="LoginBTN" Content="Login" HorizontalAlignment="Left" Margin="408.5,276,0,0" VerticalAlignment="Top" Width="75" Click="LoginBTN_Click"/>
        <Label x:Name="usernameLABEL" Content="Username" HorizontalAlignment="Left" Margin="36.5,28.5,0,0" VerticalAlignment="Top"/>
        <Label x:Name="passwordLABEL" Content="Password" HorizontalAlignment="Left" Margin="36.5,73,0,0" VerticalAlignment="Top"/>
        <Label x:Name="errorLabel" Content="" HorizontalAlignment="Left" Margin="34.5,2.54,0,0" VerticalAlignment="Top" Foreground="Red"/>
    </Grid>
</Window>
